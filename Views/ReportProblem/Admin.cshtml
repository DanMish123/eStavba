@model List<ReportProblemModel>

@{
    ViewData["Title"] = "Reported Problems";
}

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/abstract-white-minimalistic-architectural-interior-with-window-3d-illustration-rendering_689904-5387.jpg?size=626&ext=jpg&ga=GA1.1.1826414947.1699747200&semt=ais') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        display: flex;
        flex-direction: column;
        color: #000000;
    }

    .reported-problem-item {
        border: 1px solid #ccc;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 5px;
        background-color: #fff;
        position: relative;
    }

    .bin-button {
        position:absolute;
        top: 20px;
        right: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        border-radius: 15px;
        background-color: rgb(255, 95, 95);
        cursor: pointer;
        transition-duration: 0.3s;
        border: none;
    }

    .bin-bottom {
        width: 15px;
    }

    .bin-top {
        width: 17px;
        transform-origin: right;
        transition-duration: 0.3s;
    }

    .bin-button:hover .bin-top {
        transform: rotate(45deg);
    }

    .bin-button:hover {
        background-color: rgb(255, 0, 0);
    }

    .bin-button:active {
        transform: scale(0.9);
    }

    .register-container {
        max-width: 1000px;
        max-height: 300px;
        background: #F8F9FD;
        background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px auto;
        position: relative;
    }

    .heading {
        text-align: center;
        font-weight: 900;
        font-size: 30px;
        color: rgb(16, 137, 211);
    }

  
</style>

<h2 style="text-align: center;" class="heading">Reported Problems</h2>
<br />

@foreach (var problem in Model)
{
    <div class="register-container">
        <div style="display: flex;">
            <h3>@($"{problem.FirstName} {problem.LastName}")</h3>
            <a class="bin-button" href="@Url.Action("Delete", "ReportProblem", new { id = problem.Id })">
                <svg class="bin-top"
                     viewBox="0 0 39 7"
                     fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <line y1="5" x2="39" y2="5" stroke="white" stroke-width="4"></line>
                    <line x1="12"
                          y1="1.5"
                          x2="26.0357"
                          y2="1.5"
                          stroke="white"
                          stroke-width="3"></line>
                </svg>
                <svg class="bin-bottom"
                     viewBox="0 0 33 39"
                     fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <mask id="path-1-inside-1_8_19" fill="white">
                        <path d="M0 0H33V35C33 37.2091 31.2091 39 29 39H4C1.79086 39 0 37.2091 0 35V0Z"></path>
                    </mask>
                    <path d="M0 0H33H0ZM37 35C37 39.4183 33.4183 43 29 43H4C-0.418278 43 -4 39.4183 -4 35H4H29H37ZM4 43C-0.418278 43 -4 39.4183 -4 35V0H4V35V43ZM37 0V35C37 39.4183 33.4183 43 29 43V35V0H37Z"
                          fill="white"
                          mask="url(#path-1-inside-1_8_19)"></path>
                    <path d="M12 6L12 29" stroke="white" stroke-width="4"></path>
                    <path d="M21 6V29" stroke="white" stroke-width="4"></path>
                </svg>
            </a>
        </div>
        <p>Email: @problem.Email</p>
        <p>Phone Number: @problem.PhoneNumber</p>
        <p>Apartment Number: @problem.ApartmentNumber</p>
        <p>Problem Description: @problem.ProblemDescription</p>
        
    </div>
}
<br />
<br />


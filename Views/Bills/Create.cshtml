@model Bills

<br />
<h2>Create New Bill</h2><br />

<style>

    h2 {
        text-align: center;
    }

    form {
        display: grid;
        gap: 10px;
        max-width: 400px;
        margin: auto;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input,
    textarea {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        resize: none;
    }

        textarea[name="Content"] {
            resize: none;
            height: 100px; /* Adjust the height as needed */
        }



    button {
        padding: 10px;
    }
</style>

@using (Html.BeginForm("Create", "Bills", FormMethod.Post))
{
    <!-- Form fields for thread title, content, etc. -->
    <!-- Example: -->
    <div>
        <label>Bill Type:</label>
        <input asp-for="BillType" />
    </div>

    <div>
        <label>Amount:</label>
        <input asp-for="Amount" />
    </div>

    <div>
        <label>Due date:</label>
        <input asp-for="DueDate" />
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Create Bill</button>
}
@model ForumThreadModel

@{
    ViewData["Title"] = "Create New Thread";
}

<br />
<h2 class="heading">Create New Thread</h2>
<br />

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/white-background-with-white-background-black-text-that-says-white_689904-124037.jpg?w=740') no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        display: flex;
        flex-direction: column;
        color: #000000;
    }
</style>

<style>

    h2 {
        text-align: center;
    }

    form {
        display: grid;
        gap: 10px;
        max-width: 400px;
        margin: auto;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input,
    textarea {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
        resize: none;
    }

        textarea[name="Content"] {
            resize: none;
            height: 100px;
        }



    button {
        padding: 10px;
    }

    .heading {
        text-align: center;
        font-weight: 900;
        font-size: 30px;
        color: rgb(16, 137, 211);
    }


    .input {
        width: 100%;
        background: white;
        border: none;
        padding: 15px 20px;
        border-radius: 20px;
        margin-top: 15px;
        box-shadow: #cff0ff 0px 10px 10px -5px;
        border-inline: 2px solid transparent;
    }


        .input::-moz-placeholder {
            color: rgb(170, 170, 170);
        }

        .input::placeholder {
            color: rgb(170, 170, 170);
        }

        .input:focus {
            outline: none;
            border-inline: 2px solid #12B1D1;
        }

    .login-button {
        display: block;
        width: 50%;
        font-weight: bold;
        background: linear-gradient(45deg, rgb(16, 137, 211) 0%, rgb(18, 177, 209) 100%);
        color: white;
        padding-block: 15px;
        margin: 20px auto;
        border-radius: 20px;
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 20px 10px -15px;
        border: none;
        transition: all 0.2s ease-in-out;
    }

        .login-button:hover {
            transform: scale(1.03);
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 23px 10px -20px;
        }

        .login-button:active {
            transform: scale(0.95);
            box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 15px 10px -10px;
        }

    .register-container {
        max-width: 550px;
        max-height: 300px;
        background: #F8F9FD;
        background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgb(244, 247, 251) 100%);
        border-radius: 40px;
        padding: 25px 35px;
        border: 5px solid rgb(255, 255, 255);
        box-shadow: rgba(133, 189, 215, 0.8784313725) 0px 30px 30px -20px;
        margin: 20px auto;
        text-align: center;
    }
</style>

@using (Html.BeginForm("Create", "KPostThread", FormMethod.Post))
{
<div>
    <input asp-for="Title" placeholder="Title" class="input"/>
    <span asp-validation-for="Title" class="text-danger"></span>

</div>

<div>
    <textarea asp-for="Content" placeholder="Content" class="input"></textarea>
    <span asp-validation-for="Content" class="text-danger"></span>

</div>

<button type="submit" class="login-button">Create Thread</button>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
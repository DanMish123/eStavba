<!-- Views/Forum/Delete.cshtml -->
@model ForumThreadModel

<h2>Delete Thread</h2>

<style>
    body {
        background-color: #f2f2f2;
        background: url('https://img.freepik.com/premium-photo/white-background-with-white-background-black-text-that-says-white_689904-124037.jpg?w=740') no-repeat center center fixed;
        background-size: cover;
        margin: 0; /* Remove default margin */
        display: flex;
        flex-direction: column;
        color: #000000; /* Text color on top of the background image */
    }
</style>

<div>
    <h3>@Model.Title</h3>
    <p>@Model.Content</p>
    <p>Created at: @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</p>

    @* Display other thread details as needed *@
</div>

<form asp-action="DeleteConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
</form>

